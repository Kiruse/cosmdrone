{
  "name": "kirucosm",
  "version": "0.1.0",
  "description": "Kiru's library + CLI for engaging Cosmos blockchains",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/kiruse/kirucosm.git",
  "author": "Kiruse",
  "license": "MIT",
  "bin": "./dist/cli.js",
  "scripts": {
    "dev": "node dist/cli/index.js",
    "predev": "yarn build",
    "build": "yarn build:lib && yarn build:cli",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:cli": "coffee -mo dist/cli -c cli",
    "prepack": "yarn build:lib && yarn build:cli"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.30.1",
    "@cosmjs/crypto": "^0.30.1",
    "@cosmjs/encoding": "^0.30.1",
    "@cosmjs/json-rpc": "^0.30.1",
    "@cosmjs/ledger-amino": "^0.30.1",
    "@cosmjs/proto-signing": "^0.30.1",
    "axios": "^1.4.0",
    "ora": "^6.3.1",
    "semver": "^7.5.1",
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/semver": "^7.5.0",
    "coffeescript": "^2.7.0",
    "typescript": "^5.1.3"
  }
}
